@* Indicates that this file is a razor page and could be accessed thorugh URL. *@
@* This is mandatory *@
@page

@* Instead of using @function, this lets the razor page access its PageModel or code-behind file. *@
@model OTA.Pages.SecondProcessPageModel;

<!-- 
        2.0 Main
            2.1 flight query <article>
            2.2 filter by <section>
            2.3 advertisement <section>
            2.4 flight results <section flexbox>
                2.4.1 load more <button flex shrink max>
    -->

<main class="container-fluid mt-3">
    <div class="row row-cols-1 gy-4 row-cols-md-2 justify-content-lg-start">
        <!-- First column -->
        <div class="col col-lg-5">
            <div class="d-flex flex-column align-items-xl-center">
                <!-- Booking -->
                <article class="border rounded-3 w-px-md-350 bg-white py-3">
                    <div class="container-fluid">
                        <!-- Trip type, seat class, no. of passenger, & bags -->
                        <div class="row row-cols-1 gy-2">
                            <!-- Trip type -->
                            <div class="col">
                                <select class="form-select border-0">
                                    @* To be logical, the flight type is return only 
                                    because the requirement isn't the OTA but to use a DB. *@
                                    <option selected>Return</option>
                                    @* <option>One-way</option>
                                    <option>MultiCity</option>
                                    <option>Nomad</option> *@
                                </select>
                            </div>
                            <!-- Seat class -->
                            <div class="col">
                                <select class="form-select border-0">
                                    @* To be logical, the seat class is economy only 
                                    because the requirement isn't the OTA but to use a DB. *@
                                    <option selected>Economy</option>
                                    @* <option>Premium Economy</option>
                                    <option>Business</option>
                                    <option>First Class</option> *@
                                </select>
                            </div>
                            <!-- No. of passenger, & bags -->
                            <div class="col d-flex justify-content-center">
                                <button class="btn border border-secondary rounded-pill px-4 px-md-2"
                                    data-bs-toggle="modal" data-bs-target="#exampleModal">
                                    <span class="my-icon-people fs-5"></span>
                                    <span class="px-sm-1" id="passengerNumbersValue">0</span>
                                    <span class="my-icon-luggage fs-5"></span>
                                    <span class="px-sm-1" id="bagsValue">0</span>
                                </button>
                            </div>
                        </div>

                        <!-- From & To locations -->
                        <div class="row row-cols-1 gy-2 my-4">
                            <!-- From location -->
                            <div class="col">
                                <div class="d-grid">
                                    <button class="btn border border-secondary rounded w-auto text-black-50"
                                        data-bs-toggle="" data-bs-target="">
                                        From
                                    </button>
                                </div>
                            </div>
                            <!-- To location -->
                            <div class="col">
                                <div class="d-grid">
                                    <button class="btn border border-secondary rounded w-auto text-black-50"
                                        data-bs-toggle="" data-bs-target="">
                                        To
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Departure & Return schedules -->
                        <div class="row row-cols-1 gy-2">
                            <!-- Departure schedule -->
                            <div class="col">
                                <div class="input-group flex-nowrap justify-content-center">
                                    <span
                                        class="input-group-text border-end-0 border-secondary rounded-start bg-white text-black-50">Departure</span>
                                    <input class="border-start-0 border-1 border-secondary rounded-end bg-light w-100"
                                        type="datetime-local" id="departure-datetime">
                                </div>
                            </div>
                            <!-- Return schedule -->
                            <div class="col">
                                <div class="input-group flex-nowrap justify-content-center">
                                    <span
                                        class="input-group-text border-end-0 border-secondary bg-white px-xl-4 text-black-50">Return</span>
                                    <input class="border-start-0 border-1 border-secondary rounded-end bg-light w-100"
                                        type="datetime-local" id="return-datetime">
                                </div>
                            </div>
                            <div class="col d-flex justify-content-center">
                                <button class="btn border rounded bg-secondary-cs text-white">
                                    Search Flight
                                </button>
                            </div>
                        </div>
                    </div>
                </article>
                <!-- Filter by -->
                <section class="border border rounded-3 d-flex align-items-center mt-3 py-2 w-px-md-350">
                    <div class="container-fluid">
                        <div class="row row-cols-1">
                            <!-- Title -->
                            <div class="col">
                                <div class="fw-bold">Filter by</div>
                            </div>
                            <!-- By price -->
                            <button class="col btn d-flex justify-content-between border-bottom">
                                <span>Price</span>
                                <span class="my-icon-more"></span>
                            </button>
                            <!-- By duration -->
                            <button class="col btn d-flex justify-content-between border-bottom">
                                <span>Duration</span>
                                <span class="my-icon-more"></span>
                            </button>

                            <!-- By time-->
                            <button class="col btn d-flex justify-content-between">
                                <span>Time</span>
                                <span class="my-icon-more"></span>
                            </button>
                        </div>
                    </div>
                </section>
                <!-- Advertisement -->
                <section class="border rounded-3 bg-light w-px-md-350 mt-3" style="height: 350px;">
                    <div class="container-fluid">
                        advertisement
                    </div>
                </section>
            </div>
        </div>
        <!-- Second column -->
        <div class="col col-lg-6">
            <div class="row row-cols-1 gy-3">
                <!-- A flight result -->
                <!-- You can add more columns here for flight results. -->
                @for (int a = 0; a <= 3; a++)
                {
                    <div class="col border rounded-3 py-3">
                        <div class="row row-cols-1 row-cols-lg-2">
                            <!-- Flight Details -->
                            <div class="col col-lg-9">
                                <div class="row row-cols-1">
                                    <!-- Departure -->
                                    <div class="col border-bottom">
                                        <!-- Departure title -->
                                        <div class="row justify-content-center pb-3">
                                            <div class="col-5 px-0">
                                                <h6 class="text-end">Departure</h6>
                                            </div>
                                            <div class="col-2 px-0 d-flex justify-content-center">
                                                <h6>:</h6>
                                            </div>
                                            <div class="col-5 px-0 d-flex">
                                                <h6 class="align-self-stretch border border-dark rounded-pill px-1 my-0">
                                                    2 stops</h6>
                                            </div>
                                        </div>
                                        <!-- Departure schedule -->
                                        <div class="row row-cols-3">
                                            <!-- From schedule -->
                                            <div class="col d-flex justify-content-center">
                                                <div class="row row-cols-auto flex-column">
                                                    <!-- Day and date -->
                                                    <div class="col">
                                                        <h6 class="fw-bold mb-0">Mon Jan 1</h6>
                                                    </div>
                                                    <!-- Time -->
                                                    <div class="col">
                                                        <h6>9:00 PM</h6>
                                                    </div>
                                                    <!-- Location -->
                                                    <div class="col py-3">
                                                        <h6><span class="fw-bold">Manila</span> <span
                                                                class="text-secondary">MNL</span></h6>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- Flight duration -->
                                            <div class="col d-flex flex-column justify-content-center align-items-center">
                                                <span class="fs-1 my-icon-from_to_flight"></span>
                                                <span>27h 10m</span>
                                            </div>
                                            <!-- To schedule -->
                                            <div class="col d-flex justify-content-center">
                                                <div class="row row-cols-auto flex-column">
                                                    <!-- Day and date -->
                                                    <div class="col">
                                                        <h6 class="fw-bold mb-0">Mon Jan 1</h6>
                                                    </div>
                                                    <!-- Time -->
                                                    <div class="col">
                                                        <h6>9:00 PM</h6>
                                                    </div>
                                                    <!-- Location -->
                                                    <div class="col py-3">
                                                        <h6><span class="fw-bold">Manila</span> <span
                                                                class="text-secondary">MNL</span></h6>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Arrival -->
                                    <div class="col pt-3 border-bottom">
                                        <!-- Arrival title -->
                                        <div class="row justify-content-center pb-3">
                                            <div class="col-5 px-0">
                                                <h6 class="text-end">Arrival</h6>
                                            </div>
                                            <div class="col-2 px-0 d-flex justify-content-center">
                                                <h6>:</h6>
                                            </div>
                                            <div class="col-5 px-0 d-flex">
                                                <h6 class="align-self-stretch border border-dark rounded-pill px-1 my-0">
                                                    2 stops</h6>
                                            </div>
                                        </div>
                                        <!-- Arrival schedule -->
                                        <div class="row row-cols-3 border-primary">
                                            <!-- From schedule -->
                                            <div class="col d-flex justify-content-center">
                                                <div class="row row-cols-auto flex-column">
                                                    <!-- Day and date -->
                                                    <div class="col">
                                                        <h6 class="fw-bold mb-0">Mon Jan 1</h6>
                                                    </div>
                                                    <!-- Time -->
                                                    <div class="col">
                                                        <h6>9:00 PM</h6>
                                                    </div>
                                                    <!-- Location -->
                                                    <div class="col py-3">
                                                        <h6><span class="fw-bold">Manila</span> <span
                                                                class="text-secondary">MNL</span></h6>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- Flight duration -->
                                            <div class="col d-flex flex-column justify-content-center align-items-center">
                                                <span class="fs-1 my-icon-from_to_flight"></span>
                                                <span>27h 10m</span>
                                            </div>
                                            <!-- To schedule -->
                                            <div class="col d-flex justify-content-center">
                                                <div class="row row-cols-auto flex-column">
                                                    <!-- Day and date -->
                                                    <div class="col">
                                                        <h6 class="fw-bold mb-0">Mon Jan 1</h6>
                                                    </div>
                                                    <!-- Time -->
                                                    <div class="col">
                                                        <h6>9:00 PM</h6>
                                                    </div>
                                                    <!-- Location -->
                                                    <div class="col py-3">
                                                        <h6><span class="fw-bold">Manila</span> <span
                                                                class="text-secondary">MNL</span></h6>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Seat class & details -->
                                    <div class="col pt-3">
                                        <div class="row row-cols-2">
                                            <!-- Seat class -->
                                            <div class="col d-flex align-items-center">
                                                <h6 class="border border-dark rounded-pill px-1 py-1 my-0">Economy</h6>
                                            </div>
                                            <!-- Details -->
                                            <div class="col d-flex justify-content-end">
                                                <button class="btn">
                                                    <span class="my-icon-more"></span>
                                                    Show details
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Price and Book -->
                            <div class="col col-lg-3">
                                <div class="row row-cols-2 h-100 row-cols-lg-1 flex-lg-column">
                                    <!-- Price -->
                                    <div class="col d-flex justify-content-center align-items-center flex-lg-grow-1">
                                        <h6 class="my-0">₱44,444</h6>
                                    </div>
                                    <!-- To Book -->
                                    <div class="col d-flex justify-content-center">
                                        <button class="btn border rounded bg-secondary-cs text-white flex-fill">
                                            Book
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>
</main>

<!-- Modal for no. of passengers and bags -->
