@page
@model OTA.Pages.LandingPagePageModel;

<main>
    <!-- Booking -->
    <section class="bg-light bg-image-main d-flex align-items-center img-layout" style="height: 500px; background-image: url(@Model.Background);">
        <div class="container border border-white border-sm-0 rounded-3 w-75 bg-white py-3">
            <!-- Trip type, seat class, no. of passenger, & bags -->
            <div class="row row-cols-1 row-cols-md-3 gy-2">
                <!-- Trip type -->
                <div class="col">
                    <select class="form-select border-0">
                        <option selected>Return</option>
                        <option>One-way</option>
                        <option>MultiCity</option>
                        <option>Nomad</option>
                    </select>
                </div>
                <!-- Seat class -->
                <div class="col">
                    <select class="form-select border-0">
                        <option selected>Economy</option>
                        <option>Premium Economy</option>
                        <option>Business</option>
                        <option>First Class</option>
                    </select>
                </div>
                <!-- No. of passenger, & bags -->
                <div class="col d-flex justify-content-center justify-content-md-start">
                    <button class="btn border border-secondary rounded-pill px-3 px-md-2" data-bs-toggle="modal"
                        data-bs-target="#exampleModal">
                        <span class="my-icon-people fs-5"></span>
                        <span class="px-sm-1" id="passengerNumbersValue">0</span>
                        <span class="my-icon-luggage fs-5"></span>
                        <span class="px-sm-1" id="bagsValue">0</span>
                    </button>
                </div>
            </div>

            <!-- From & To locations -->
            <div class="row row-cols-1 row-cols-md-2 justify-content-lg-start gy-2 my-4">
                <!-- From location -->
                <div class="col-lg-4">
                    <div class="d-grid">
                        <button class="btn border border-secondary rounded w-auto text-black-50" data-bs-toggle=""
                            data-bs-target="">
                            From
                        </button>
                    </div>
                </div>
                <!-- To location -->
                <div class="col-lg-4">
                    <div class="d-grid">
                        <button class="btn border border-secondary rounded w-auto text-black-50" data-bs-toggle=""
                            data-bs-target="">
                            To
                        </button>
                    </div>
                </div>
            </div>

            <!-- Departure & Return schedules -->
            <div class="row row-cols-1 row-cols-lg-3 gy-2">
                <!-- Departure schedule -->
                <div class="col-md-6">
                    <div class="input-group flex-nowrap justify-content-center">
                        <span
                            class="input-group-text border-end-0 border-secondary rounded-start bg-white text-black-50">Departure</span>
                        <input class="border-start-0 border-1 border-secondary rounded-end bg-white"
                            type="datetime-local" id="departure-datetime">
                    </div>
                </div>
                <!-- Return schedule -->
                <div class="col-md-6">
                    <div class="input-group flex-nowrap justify-content-center">
                        <span
                            class="input-group-text border-end-0 border-secondary bg-white px-xl-4 text-black-50">Return</span>
                        <input class="border-start-0 border-1 border-secondary rounded-end bg-white"
                            type="datetime-local" id="return-datetime">
                    </div>
                </div>
                <div class="col d-flex justify-content-center justify-content-lg-start">
                    <button class="btn border rounded bg-secondary-cs text-white">
                        Search Flight
                    </button>
                </div>
            </div>
        </div>
    </section>
    <!-- Suggested Flights -->
    <section class=" container-fluid px-lg-5">
        <div class="fs-3 fw-bold pt-4">Find inspiration in places picked just for you</div>

        <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-4 gy-2 gy-sm-4 mt-2">
            @foreach (var flightInfo in Model.SuggestedFlights)
            {
                <div class="col-12">
                    <div class="container rounded-3 img-layout h-px-100 h-px-sm-200"
                        style="background-image: url(@flightInfo.ImagePath);">
                        <h3 class="text-white">@flightInfo.Title</h3>
                        <h6 class="text-white">@flightInfo.Cost</h6>
                    </div>
                </div>
            }
        </div>

        <div class="col col-sm-4 col-md-3 col-lg-2 mx-sm-auto my-4">
            <div class="d-grid">
                <button class="btn border rounded bg-secondary-cs text-white">Find more deals</button>
            </div>
        </div>
    </section>
</main>